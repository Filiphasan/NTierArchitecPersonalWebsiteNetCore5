@model MyWebApp.Entities.Dtos.CategoryDtos.CategoryDto

@{
    ViewBag.Title = "Kategori Silme";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Category">Kategori Listesi</a></li>
    <li class="breadcrumb-item">Kategori Silme</li>
</ol>
<hr />
<h2 class="text-center">Kategori Silme</h2><hr />
<h3>@Model.Category.Name isimli kategoriyi veritabanından silmek istiyor musunuz?</h3><hr />
<div>
    <dl class="dl-horizontal">
        <dt>Kategori</dt>
        <dd>@Model.Category.Name</dd>

        <dt>Kategori FontAwesome</dt>
        <dd style="font-size:30px">@Html.Raw(Model.Category.CategoryFA)</dd>

        <dt>Açıklama</dt>
        <dd>@Model.Category.Description</dd>

        <dt>Silindi mi?</dt>
        <dd>@Model.Category.IsDeleted</dd>

        <dt>Aktif mi?</dt>
        <dd>@Model.Category.IsActive</dd>

        <dt>Oluşturulma Zamanı</dt>
        <dd>@Model.Category.CreatedTime</dd>

        <dt>Oluşturan</dt>
        <dd>@Model.Category.CreatedByName</dd>

        <dt>Düzenlenme Zamanı</dt>
        <dd>@Model.Category.ModifiedTime</dd>

        <dt>Düzenleyen</dt>
        <dd>@Model.Category.ModifiedByName</dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Basic example">
    <a asp-action="DoHardDelete" asp-controller="Category" asp-area="Admin" asp-route-id="@Model.Category.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Bilgileri Sil</a>
    <a class="btn btn-warning" asp-action="Index" asp-controller="Category" asp-area="Admin"><i class="fas fa-undo"></i> Listeye Dön</a>
</div>