@model MyWebApp.Entities.Dtos.SiteIdentityDtos.SiteIdentityUpdateDto
@{
    ViewBag.Title = "Site Kimlik Bilgileri Düzenleme";
    Layout = "_Layout";
}
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="SiteIdentity">Site Kimlik Bilgileri</a></li>
    <li class="breadcrumb-item">Site Kimlik Bilgileri Düzenleme</li>
</ol><hr />
<h2 class="text-center">Site Kimlik Bilgileri Düzenleme</h2>
<form method="post" class="" asp-controller="SiteIdentity" asp-area="Admin" asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Keywords"></label>
        <input class="form-control" asp-for="Keywords" />
        <span asp-validation-for="Keywords"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description"/>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="LogoFA"></label>&nbsp;@Html.Raw(Model.LogoFA)
        <input class="form-control" asp-for="LogoFA" />
        <span asp-validation-for="LogoFA"></span>
    </div>
    <div class="form-group">
        <label asp-for="LogoText"></label>
        <input class="form-control" asp-for="LogoText" />
        <span asp-validation-for="LogoText"></span>
    </div>
    <input hidden type="checkbox" asp-for="IsActive" />
    <input hidden type="checkbox"  asp-for="IsDeleted" />
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <button type="submit" class="btn btn-success"><i class="far fa-save"></i> Bilgileri Kaydet</button>
        </div>
    </div>
</form>
<a asp-area="Admin" asp-controller="SiteIdentity" asp-action="Index" class="btn btn-warning"><i class="fas fa-angle-double-left"></i> Listeye Dön</a>