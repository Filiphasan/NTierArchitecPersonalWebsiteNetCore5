@model MyWebApp.Entities.Dtos.ContactInfoDtos.ContactInfoUpdateDto

@{
    ViewBag.Title = "İletişim Bilgisi Düzenleme";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Contact">İletişim Bilgisi</a></li>
    <li class="breadcrumb-item">İletişim Bilgisi Düzenleme</li>
</ol>
<hr />
<h2 class="text-center">İletişim Bilgisi Düzenleme</h2>
<form method="post" asp-action="Edit">
    <input hidden asp-for="Id" />
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control"/>
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortAdress"></label>
        <input asp-for="ShortAdress" class="form-control"/>
        <span asp-validation-for="ShortAdress"></span>
    </div>
    <div class="form-group">
        <label asp-for="LongAdress"></label>
        <textarea asp-for="LongAdress" class="form-control" rows="2"></textarea>
        <span asp-validation-for="LongAdress"></span>
    </div>
    <input hidden asp-for="IsActive" />
    <input hidden asp-for="IsDeleted"/>
    <div class="form-group">
        <div class="offset-lg-1">
            <button class="btn btn-success" ><i class="far fa-save"></i> Bilgileri Kaydet</button>
        </div>
    </div>
</form>
<a asp-action="Index" class="btn btn-danger"><i class="fas fa-undo"></i> Listeye Dön</a>