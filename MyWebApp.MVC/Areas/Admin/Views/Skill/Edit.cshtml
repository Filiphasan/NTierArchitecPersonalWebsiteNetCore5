@model MyWebApp.Entities.Dtos.SkillDtos.SkillUpdateDto

@{ 
    ViewBag.Title = "Yetenek Bilgileri Güncelleme";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Skill">Yetenekler Listesi</a></li>
    <li class="breadcrumb-item">Yetenek Bilgileri Güncelleme</li>
</ol>
<hr />
<h2 class="text-center">Yetenek Bilgileri Güncelleme</h2>
<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="PercentageValue"></label>
        <input class="form-control" asp-for="PercentageValue" />
        <span class="text-danger" asp-validation-for="PercentageValue"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="form-check-label"></label>
        <input type="checkbox" class="form-check" asp-for="IsActive" />
        <span class="text-danger" asp-validation-for="IsActive"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsDeleted" class="form-check-label"></label>
        <input type="checkbox" class="form-check" asp-for="IsDeleted" />
        <span class="text-danger" asp-validation-for="IsDeleted"></span>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <button type="submit" class="btn btn-success"><i class="far fa-save"></i> Bilgileri Kaydet</button>
        </div>
    </div>
</form>
<a asp-area="Admin" asp-controller="Skill" asp-action="Index" class="btn btn-warning"><i class="fas fa-angle-double-left"></i> Listeye Dön</a>