@model MyWebApp.Entities.Dtos.ArticleDtos.ArticleUpdateDto

@{
    ViewBag.Title = "Makale Bilgileri Düzenleme";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Article">Makale Listesi</a></li>
    <li class="breadcrumb-item">Makale Bilgileri Düzenleme</li>
</ol>
<hr />
<h2 class="text-center">Makale Bilgileri Düzenleme</h2>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input hidden asp-for="Id"/>
    <input hidden asp-for="Thumbnail"/>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortContent"></label>
        <textarea asp-for="ShortContent" class="form-control" rows="3"></textarea>
        <span asp-validation-for="ShortContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Thumbnail">Makale Resmi (Lütfen 16:9 formatında bir resim seçiniz.)</label>
        <div><img src="@Model.Thumbnail" class="img-fluid img-thumbnail w-50" alt="Alternate Text" /></div>
        <input type="file" name="fileImg" class="form-control-file" />
        <span class="text-danger" asp-validation-for="Thumbnail"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(@ViewBag.CategoryList,"Id","Name"))">
            <option>Lütfen bir kategori seçiniz...</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SeoTags"></label>
        <input asp-for="SeoTags" class="form-control" />
        <span asp-validation-for="SeoTags" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SeoDescription"></label>
        <input asp-for="SeoDescription" class="form-control" />
        <span asp-validation-for="SeoDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="form-check-label"></label>
        <input type="checkbox" asp-for="IsActive" class="form-check"/>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsDeleted" class="form-check-label"></label>
        <input asp-for="IsDeleted" type="checkbox" class="form-check"/>
        <span asp-validation-for="IsDeleted" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" id="editor" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="offset-lg-1">
            <button type="submit" class="btn btn-success"><i class="far fa-save"></i> Bilgileri Kaydet</button>
        </div>
    </div>
</form>
<a asp-action="Index" class="btn btn-danger"><i class="fas fa-undo"></i> Listeye Dön</a>
@section Scripts{ 
    
}