@model MyWebApp.Entities.Dtos.MessageDtos.MessageDto

@{
    ViewBag.Title = "Mesaj Silme";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Skill">Mesajlar Listesi</a></li>
    <li class="breadcrumb-item">Mesaj Silme</li>
</ol>
<hr />
<h2 class="text-center">Mesaj Detayları</h2>
<hr />
<h3>@Model.Messagee.FirstName @Model.Messagee.LastName kişisinin mesajını silmek istiyor musunuz?</h3>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>Ad</dt>
        <dd>@Model.Messagee.FirstName</dd>

        <dt>Soyad</dt>
        <dd>@Model.Messagee.LastName</dd>

        <dt>E-Mail</dt>
        <dd>@Model.Messagee.Email</dd>

        <dt>Konu</dt>
        <dd>@Model.Messagee.Subject</dd>

        <dt>Mesaj</dt>
        <dd>@Model.Messagee.Text</dd>

        <dt>Silindi Mi?</dt>
        <dd>@Model.Messagee.IsDeleted</dd>

        <dt>Aktif mi?</dt>
        <dd>@Model.Messagee.IsActive</dd>

        <dt>Oluşturulma Tarihi</dt>
        <dd>@Model.Messagee.CreatedTime</dd>

        <dt>Oluşturan</dt>
        <dd>@Model.Messagee.CreatedByName</dd>

        <dt>Düzenlenme Tarihi</dt>
        <dd>@Model.Messagee.ModifiedTime</dd>

        <dt>Düzenleyen</dt>
        <dd>@Model.Messagee.ModifiedByName</dd>
    </dl>
</div>
<div class="btn-group" role="group" aria-label="Basic example">
    <a asp-action="DoHardDelete" asp-controller="Messages" asp-area="Admin" asp-route-id="@Model.Messagee.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Bilgileri Sil</a>
    <a class="btn btn-warning" asp-action="Index" asp-controller="Messages" asp-area="Admin"><i class="fas fa-undo"></i> Listeye Dön</a>
</div>
