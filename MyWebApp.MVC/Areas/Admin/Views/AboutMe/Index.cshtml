@model MyWebApp.Entities.Dtos.AboutMeDtos.AboutMeDto

@{
    ViewBag.Title = "Hakkımda Bilgisi";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item">Hakkımda Bilgisi</li>
</ol>
<hr />
@if (Model.ResultStatus == ResultStatus.Success)
{
<h2 class="text-center">Hakkımda Bilgisi</h2>
    <table class="table table-responsive-lg table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Fotoğraf</th>
                <th>Meslek FA</th>
                <th>Meslek</th>
                <th>Doğum Tarihi</th>
                <th>Özgeçmiş</th>
                <th>Oluşturulma Tarihi</th>
                <th>Oluşturan</th>
                <th>Düzenlenme Tarihi</th>
                <th>Düzenleyen</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tfoot class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Fotoğraf</th>
                <th>Meslek FA</th>
                <th>Meslek</th>
                <th>Doğum Tarihi</th>
                <th>Özgeçmiş</th>
                <th>Oluşturulma Tarihi</th>
                <th>Oluşturan</th>
                <th>Düzenlenme Tarihi</th>
                <th>Düzenleyen</th>
                <th>İşlem</th>
            </tr>
        </tfoot>
        <tbody>
            <tr>
                <td>@Model.AboutMe.Id</td>
                <td>@Model.AboutMe.FirstName</td>
                <td>@Model.AboutMe.LastName</td>
                <td><img src="@Model.AboutMe.ImagePath" alt="Fotoğraf" class="img-fluid"/></td>
                <td style="font-size:30px">@Html.Raw(Model.AboutMe.MyJobFA)</td>
                <td>@Model.AboutMe.MyJob</td>
                <td>@Model.AboutMe.BirthDate.ToShortDateString()</td>
                <td><a href="@Model.AboutMe.MyCVPath">Özgeçmiş <i class="fas fa-download"></i></a></td>
                <td>@Model.AboutMe.CreatedTime.ToShortDateString()</td>
                <td>@Model.AboutMe.CreatedByName</td>
                <td>@Model.AboutMe.ModifiedTime.ToShortDateString()</td>
                <td>@Model.AboutMe.ModifiedByName</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="AboutMe" asp-action="Edit" asp-route-id="@Model.AboutMe.Id" title="Düzenle"><i class="fas fa-edit"></i></a>
                        <a class="btn btn-secondary" asp-area="Admin" asp-controller="AboutMe" asp-action="Details" asp-route-id="@Model.AboutMe.Id" title="Detaylı İncele"><i class="fas fa-info-circle"></i></a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
}