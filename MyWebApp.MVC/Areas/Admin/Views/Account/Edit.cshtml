@model MyWebApp.Entities.Dtos.SocialMediaAccountDtos.SocialMediaAccountUpdateDto

@{
    ViewBag.Title = "Sosyal Medya Hesabı Bilgisi Düzenleme";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Account">Sosyal Medya Hesap Bilgisi Düzenleme</a></li>
    <li class="breadcrumb-item">Sosyal Medya Hesabı Bilgisi Düzenleme</li>
</ol>
<hr />
<form method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="AccountFA"></label>
        <input asp-for="AccountFA" class="form-control" />
        <span asp-validation-for="AccountFA" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AccountUrl"></label>
        <input asp-for="AccountUrl" class="form-control" />
        <span asp-validation-for="AccountUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="form-check-label"></label>
        <input asp-for="IsActive" type="checkbox" class="form-check"/>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsDeleted" class="form-check-label"></label>
        <input asp-for="IsDeleted" type="checkbox" class="form-check"/>
        <span asp-validation-for="IsDeleted" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="offset-lg-1">
            <button type="submit" class="btn btn-success"><i class="far fa-save"></i> Bilgileri Kaydet</button>
        </div>
    </div>
</form>
<a asp-action="Index" class="btn btn-danger"><i class="fas fa-undo"></i> Listeye Dön</a>