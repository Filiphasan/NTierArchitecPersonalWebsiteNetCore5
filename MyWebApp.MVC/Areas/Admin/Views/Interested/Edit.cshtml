@model MyWebApp.Entities.Dtos.InterestedDtos.InterestedUpdateDto

@{
    ViewBag.Title = "Hobi Bilgisi Düzenleme";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Interested">Hobi Listesi</a></li>
    <li class="breadcrumb-item">Hobi Bilgisi Düzenleme</li>
</ol>
<hr />
<h2 class="text-center">Hobi Bilgisi Düzenleme</h2>
<form method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="form-check-label"></label>
        <input asp-for="IsActive" class="form-check" type="checkbox" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsDeleted" class="form-check-label"></label>
        <input asp-for="IsDeleted" class="form-check" type="checkbox" />
        <span asp-validation-for="IsDeleted" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="offset-lg-1">
            <button class="btn btn-success" type="submit"><i class="far fa-save"></i> Bilgileri Kaydet</button>
        </div>
    </div>
</form>
<a class="btn btn-danger" asp-action="Index"><i class="fas fa-undo"></i> Listeye Dön</a>