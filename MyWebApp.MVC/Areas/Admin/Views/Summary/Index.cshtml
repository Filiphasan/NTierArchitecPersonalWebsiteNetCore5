@model MyWebApp.Entities.Dtos.SummaryDtos.SummaryDto

@{
    ViewBag.Title = "Özet Bilgisi";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="Home">Admin</a></li>
    <li class="breadcrumb-item">Özet Bilgisi</li>
</ol>
<hr />
@if (Model.ResultStatus == ResultStatus.Success)
{
<h2 class="text-center">Özet Bilgisi</h2>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Özet
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-responsive-lg table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Özet</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturan</th>
                            <th>Düzenlenme Tarihi</th>
                            <th>Düzenleyen</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tfoot class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Özet</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturan</th>
                            <th>Düzenlenme Tarihi</th>
                            <th>Düzenleyen</th>
                            <th>İşlem</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <tr>
                            <td>@Model.Summary.Id</td>
                            <td>@Model.Summary.Content</td>
                            <td>@Model.Summary.CreatedTime.ToShortDateString()</td>
                            <td>@Model.Summary.CreatedByName</td>
                            <td>@Model.Summary.ModifiedTime.ToShortDateString()</td>
                            <td>@Model.Summary.ModifiedByName</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Summary" asp-action="Edit" asp-route-id="@Model.Summary.Id" title="Düzenle"><i class="fas fa-edit"></i></a>
                                    
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}