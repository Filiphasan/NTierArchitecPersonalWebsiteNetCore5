@model MyWebApp.Entities.Dtos.HomePageSliderDtos.HomePageSliderListDto
@{
    ViewBag.Title = "Anasayfa";
    int number = 1;
    int number2 = 0;
}
<section id="home">
    <div class="cerceve">
        <div id="carouselExampleControls" class="carousel" data-ride="carousel">
            <ol class="carousel-indicators">
                @foreach (var item in Model.HomePageSliders)
                {
                    if (number2 < 1)
                    {
                        <li data-target="#carouselExampleControls" data-slide-to="@number2" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleControls" data-slide-to="@number2"></li>
                    }
                    number2 += 1;
                }
            </ol>
            <div class="carousel-inner">
                @foreach (var item in Model.HomePageSliders)
                {
                    if (number <= 1)
                    {
                        <div class="carousel-item active">
                            <div class="col-12 slider-bg text-center py-5">
                                <h1 class="display-4 font-weight-bold py-5">@item.Title.ToUpper()</h1>
                                <p class="py-5">
                                    @item.ShortDescription
                                </p>
                                <a asp-action="SliderDetail" title="@item.Title" asp-route-Title="@SeoHelper.ToSeoUrl(item.Title)" asp-route-id="@item.Id" class="btn btn-block btn-lg w-50 mx-auto my-5" type="button">Daha Fazlası</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <div class="col-12 slider-bg text-center py-5">
                                <h1 class="display-4 font-weight-bold py-5">@item.Title.ToUpper()</h1>
                                <p class="py-5">
                                    @item.ShortDescription
                                </p>
                                <a asp-action="SliderDetail" asp-route-Title="@SeoHelper.ToSeoUrl(item.Title)" asp-route-id="@item.Id" class="btn btn-block btn-lg w-50 mx-auto my-5" type="button">Daha Fazlası</a>
                            </div>
                        </div>
                    }
                    number += 1;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>