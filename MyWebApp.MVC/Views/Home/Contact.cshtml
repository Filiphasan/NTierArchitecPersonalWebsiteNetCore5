@model MyWebApp.Entities.Dtos.MessageDtos.MessageAddDto
@{ 
    ViewBag.Title = "İletişim";
}
    <div class="container-fluid map p-0 mx-0 my-5">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d50943.0924871384!2d37.34511757069415!3d37.058834798536445!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1531e6b4f7f18c2f%3A0xc02e8b35116baad0!2sGaziantep!5e0!3m2!1str!2str!4v1598129581147!5m2!1str!2str"
                width="100%" height="600" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false"
                tabindex="0"></iframe>
    </div>
    <!--CONTACT-->
    <section id="contact">
        <div class="cerceve">
            <div class="row">
                <div class="col-lg-8 p-5 contact-bg mx-auto text-center">
                    <h1 class="pt-3 pb-5"><i class="fas fa-envelope-open-text"></i> Bana Ulaşın</h1>
                    <form method="post" asp-action="Contact">
                        <div class="col-lg-12 form-group ">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control first-input" placeholder="Adınız" asp-for="FirstName" required>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Soyadınız" asp-for="LastName" required>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="email" class="my-3 form-control" placeholder="Mail Adresiniz" asp-for="Email" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" class="my-3 form-control" placeholder="Konu" asp-for="Subject" required>
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <textarea class="my-3 form-control" placeholder="Mesajınız" cols="30" rows="5" asp-for="Text" required></textarea>
                                <span asp-validation-for="Text" class="text-danger"></span>
                            </div>
                            <button class="btn btnContact w-50 font-weight-bold" type="submit"><i class="fas fa-paper-plane"></i> Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>